<keymap version="1" name="myx-keymap" parent="Mac OS X 10.5+">
  <action id="ReformatCode">
    <keyboard-shortcut first-keystroke="meta alt l" />
    <keyboard-shortcut first-keystroke="ctrl l" second-keystroke="l" />
  </action>
  <action id="Refresh">
    <keyboard-shortcut first-keystroke="meta r" second-keystroke="meta r" />
  </action>
  <action id="Replace">
    <keyboard-shortcut first-keystroke="meta r" second-keystroke="meta r" />
  </action>
  <action id="ReplaceInPath">
    <keyboard-shortcut first-keystroke="shift meta r" />
    <keyboard-shortcut first-keystroke="meta r" second-keystroke="meta a" />
  </action>
  <action id="Rerun">
    <keyboard-shortcut first-keystroke="meta r" second-keystroke="meta r" />
  </action>
  <action id="Scala.ShowImplicits">
    <keyboard-shortcut first-keystroke="shift ctrl alt equals" />
    <keyboard-shortcut first-keystroke="shift ctrl alt add" />
  </action>
  <action id="ShowReformatFileDialog">
    <keyboard-shortcut first-keystroke="shift meta alt l" />
    <keyboard-shortcut first-keystroke="ctrl alt l" second-keystroke="l" />
  </action>
</keymap>